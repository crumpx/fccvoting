extends ../layout

block content
	content
		.wrapper
			.content-container				
				if (owner)
					.btn.btn-success
						a(href='edit/#{poll._id}') Edit
					.btn.btn-danger
						a(href='delete/#{poll._id}' onclick="return confirm('Are you sure you want to delete this item?');") Delete
					.btn.btn-warning
						if (poll.disabled)
							a(href='toggle/#{poll._id}') active
						if (!poll.disabled)
							a(href='toggle/#{poll._id}') deactive
				h4 Started By 
					a(href='/dashboard/#{poll.author.username}') #{poll.author.username}
				h1 #{poll.title} 
				if (voted)
					.voteList
					for option in poll.options
						.vote(style="margin-bottom: 12px")
							label #{option.text} 
							label #{option.count} votes
				if (!voted)
					form#voting(method='POST' action='?' onsubmit="return $('#submitVote').prop('disabled', true);")
						.pullOptions
							for option in poll.options
								.ops(style="margin-bottom: 12px;")				
									input(type='radio' name=poll._id value=option._id id=option._id)
									label(for=option._id style='padding-left: 20px;') #{option.text} 
	
							input#submitVote(type='submit' value='Vote!')

