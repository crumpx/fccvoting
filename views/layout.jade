doctype html
html
	head
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css')
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(href="https://fonts.googleapis.com/css?family=Work+Sans" rel="stylesheet")

		block head

	body
		header
			nav
				.navbar
					.nav-title
						a(href='/') Poll-it!
					.nav-item						
						if (!loggedin)
							.right-20
								a(href="/login") Login
							.right-20
								a(href="/register") Register
						if (loggedin)
							.right-20
								a(href='/new/poll') Create a Poll					
							.right-20
								a(href="/logout") Log out
							.right-20
								span.user-icon 
									a(href='/dashboard') #{loggedin.fullname}
		block content
		
		footer
			.footer
				.icons
					a.white(href='https://www.facebook.com/crumpx')
						span.fa-stack.fa-lg
							i.fa.fa-square-o.fa-stack-2x
							i.fa.fa-facebook.fa-stack-1x

					a.white(href='https://www.twitter.com/crumpz')
						span.fa-stack.fa-lg
							i.fa.fa-square-o.fa-stack-2x
							i.fa.fa-twitter.fa-stack-1x

					a.white(href='https://github.com/crumpx')
						span.fa-stack.fa-lg
							i.fa.fa-square-o.fa-stack-2x
							i.fa.fa-github.fa-stack-1x		

					a.white(href='https://www.linkedin.com/in/gang-zhao-198201')
						span.fa-stack.fa-lg
							i.fa.fa-square-o.fa-stack-2x
							i.fa.fa-linkedin.fa-stack-1x			
				p Created by Gang Zhao	

	script(src='https://code.jquery.com/jquery-3.1.1.min.js')
	script(src='/javascripts/javascript.js')

